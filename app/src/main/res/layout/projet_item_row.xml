<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="6dp"
    android:padding="5dp"
    android:clickable="true"
    card_view:cardCornerRadius="16dp"
    card_view:cardElevation="3dp"
    card_view:cardBackgroundColor="@color/appOrange"
    android:elevation="6dp"
    android:id="@+id/cardProjet">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/transparent"
        android:padding="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtProjetTitre"
            android:text="Ceci est un titre qui se trouve a etre long"
            android:textSize="17sp"
            android:textColor="@color/white"
            android:layout_alignParentTop="false"
            android:layout_alignParentRight="false"
            android:layout_alignParentBottom="false"
            android:layout_alignParentLeft="false"
            android:layout_margin="5dp"
            style="@style/Base.TextAppearance.AppCompat.Title"
            android:singleLine="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtProjetDescription"
            android:text="Projet de développement d&apos;un jeu haute qualitée. Ce projet vise a tuer les talibans en irak pour pouvoir prendre controle de la vile."
            android:textSize="15sp"
            android:textColor="@color/white"
            android:layout_alignParentRight="false"
            android:layout_alignParentBottom="false"
            android:layout_alignParentLeft="false"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:layout_alignWithParentIfMissing="false"
            android:layout_alignParentEnd="false"
            android:layout_alignParentStart="false"
            android:layout_alignParentTop="false"
            android:layout_below="@+id/txtProjetTitre"
            android:singleLine="false"
            android:typeface="normal"
            android:maxLines="4" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtProjetDeadline"
            android:text="19 Mars 2056"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:gravity="left|bottom|end"
            android:enabled="false"
            android:drawableLeft="@drawable/ic_date_range_black_18dp"
            android:layout_alignParentLeft="false"
            android:layout_alignParentBottom="false"
            android:layout_alignWithParentIfMissing="false"
            android:layout_alignParentTop="false"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:maxLines="1"
            android:minLines="1"
            android:layout_below="@+id/prgProjetProgres" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtNombreTaches"
            android:text="954 Tâches"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:enabled="false"
            android:layout_alignParentLeft="false"
            android:layout_alignParentBottom="false"
            android:layout_alignWithParentIfMissing="false"
            android:layout_alignParentTop="false"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:maxLines="1"
            android:minLines="1"
            android:layout_below="@+id/prgProjetProgres"
            android:layout_alignParentRight="true" />

        <ProgressBar
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/prgProjetProgres"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/txtProjetDescription"
            android:layout_margin="5dp"
            android:indeterminate="false" />

    </RelativeLayout>
</android.support.v7.widget.CardView>

